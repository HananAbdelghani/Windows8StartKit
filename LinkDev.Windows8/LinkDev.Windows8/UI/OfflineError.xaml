<UserControl
    x:Class="LinkDev.Windows8.UI.OfflineError"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LinkDev.Windows8.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30"
    d:DesignWidth="90"
	Width="90" Height="30">
    
    <Border BorderBrush="#7FFFFFFF" Background="#4C000000" BorderThickness="1">
        <StackPanel Orientation="Horizontal">
			<Grid Width="30">
				<Path Data="M0,0 L20,20" Height="15" Stretch="Fill" Stroke="Red" UseLayoutRounding="False" Width="15" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<Path Data="M20,0 L0,20" Height="15" Stretch="Fill" Stroke="Red" UseLayoutRounding="False" Width="15" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Grid>
            <TextBlock Text="OFFLINE" FontSize="12" VerticalAlignment="Center" Foreground="White" />
		</StackPanel>
    </Border>
</UserControl>
